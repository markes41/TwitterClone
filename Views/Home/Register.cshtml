@{
    bool existeUsuario = (ViewBag.existeUsuario != null);
}

<form action="@Url.Action("UserRegister", "Home")" method="POST" class="form1">
    @if(existeUsuario)
    {
        <p class="error-credenciales">Ya existe un usuario registrado con ese mail o username.</p>
    }
    <div class="form-group">
        <input class="un " type="email"  name="email" placeholder="Correo electrónico" align="center" required/>
    </div>
    <div class="form-group">
        <input class="pass" type="text" name="name" placeholder="Nombre" required/>
    </div>
    <div class="form-group">
        <input class="pass" type="text" name="username" placeholder="Nickname" required/>
    </div>
    <div class="form-group">
        <input class="pass" type="password" name="password" placeholder="Contraseña" required/>
    </div>

    <div class="form-group">
        <input class="pass" type="text" name="country" placeholder="País" required/>
    </div>

    <div class="form-group">
        <input class="pass" type="text" name="city" placeholder="Ciudad" required/>
    </div>

    <button type="submit" class="submit" align="center">Register</button>
</form>